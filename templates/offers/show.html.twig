{% extends 'base.html.twig' %}

{% block title %}Offer{% endblock %}

{% block body %}
    <h1>Offer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ offer.name }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ offer.city }}</td>
            </tr>
            <tr>
                <th>ContractType</th>
                <td>{{ offer.contractType }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ offer.duration }}</td>
            </tr>
            <tr>
                <th>ShortDescription</th>
                <td>{{ offer.shortDescription }}</td>
            </tr>
            <tr>
                <th>DateOfPublication</th>
                <td>{{ offer.dateOfPublication ? offer.dateOfPublication|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>LongDescription</th>
                <td>{{ offer.longDescription }}</td>
            </tr>
            <tr>
                <th>FieldOfActivity</th>
                <td>{{ offer.fieldOfActivity }}</td>
            </tr>
            <tr>
                <th>JobPosition</th>
                <td>{{ offer.jobPosition }}</td>
            </tr>
            <tr>
                <th>DateIn</th>
                <td>{{ offer.dateIn ? offer.dateIn|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Wage</th>
                <td>{{ offer.wage }}</td>
            </tr>
            <tr>
                <th>Tutor</th>
                <td>{{ offer.tutor }}</td>
            </tr>
            <tr>
                <th>DrivingLicence</th>
                <td>{{ offer.drivingLicence ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('offers_index') }}">back to list</a>

    <a href="{{ path('offers_edit', {'id': offer.id}) }}">edit</a>

    {{ include('offers/_delete_form.html.twig') }}
{% endblock %}
