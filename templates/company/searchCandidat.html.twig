{% extends 'base.html.twig' %}
        {% block title %}Recherche emploi world wide job{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('search') }}
{% endblock %}
{% block filters %}
{% endblock %}
{% block body %}
    <div class="filterBar shadow pt-3">
    <div class="filterCity">
        {{ form_start(form) }}
        {{ form_widget(form.searchStudent) }}
    </div>
    <div class="filterFieldOfActivity mx-2">
        {{ form_widget(form.searchBySchool) }}
    </div>
    <div class="filterTypeOfContract me-2">
        {{ form_widget(form.searchByOffers) }}
    </div>
    <div class="submitFilter">
        {{ form_widget(form.submit, {'label': 'Recherche'}) }}
        {{ form_end(form) }}
    </div>
    </div>
    <div class="searchContainer mt-5 pt-3">
        <div class="searchGrid">
            <div class="smallSearchCard">
                {% if candidatures %}
                {% for candidature in candidatures %}
                    <div class="card rounded sha dow smallOffer" id="smallOffer{{ candidature.id }}">
                        <div class="card-body smallCard d-flex flex-row align-items-center">

                            <div class="job-profil-Container me-2">
                                <img class="profil-offer-photo mt-0 " src="{{ candidature.picture }}"
                                     alt="logo entreprise">
                            </div>

                            <div class="jobInfoContainer">

                                <div class="jobSubInfoContainer d-flex flex-column align-items-start">
                                    <h3 class="jobTitle offer-name text-primary mb-1">  {{ candidature.lastname }} {{ candidature.firstname }}</h3>
                                    <h4 class="jobLocation offer-localisation  mt-1 mb-0">{{ candidature.city }}
                                        ({{ candidature.zip }}
                                        )</h4>
                                    <h4 class="jobType offer-formation mb-0"> {{ candidature.schoolName }} </h4>
                                </div>
                                {% if candidature.status == 1 %}
                                    <div class="status-candidature"> En attente </div>
                                {% elseif candidature.status == 2 %}
                                    <div class="status-candidature" > Validé </div>
                                {% elseif candidature.status == 3 %}
                                    <div class="status-candidature"> Refusé </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="largeSearchCard card-cv" style="max-width: 580px;" id="largeSearchCard">
            {% for candidature in candidatures %}
                <div class="card rounded shadow largeOffer" id="largeOffer{{ candidature.id }}">
                    <div class="card-body largeCard d-flex flex-column">
                        <button class="btn-close closeOffer"></button>
                        <div style="width: 34.375rem"><img class="cv-offer" src="{{ asset('build/images/120-modele-cv-francais.93cbe942.jpg') }}">
                        </div>
                        <hr>
                        <div>
                            <button class="btn-primary text-white rounded descApply me-2">Valider</button>
                            <button class="btn-primary text-white rounded descSave me-1 ms-2">Voir le profil</button>
                        </div>
                    </div>
                </div>
            {% endfor %}
            {% else %}
                <div class="card rounded sha dow smallOffer">
                    <div class="card-body smallCard d-flex flex-row align-items-center">
                        <div class="jobInfoContainer">
                            <div class="jobSubInfoContainer d-flex flex-column align-items-start">
                                Aucune candidature
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
