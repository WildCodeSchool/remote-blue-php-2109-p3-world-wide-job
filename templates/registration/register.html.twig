{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.civility) }}
    {{ form_row(registrationForm.firstname) }}
    {{ form_row(registrationForm.lastname) }}
    {{ form_row(registrationForm.birthdate) }}
    {{ form_row(registrationForm.phone) }}
    {{ form_row(registrationForm.adress1) }}
    {{ form_row(registrationForm.adress2) }}
    {{ form_row(registrationForm.zip) }}
    {{ form_row(registrationForm.city) }}
    {{ form_row(registrationForm.country) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.plainPassword, {
        label: 'Mot de passe'
    }) }}
    <button type="submit" class="btn">Etape suivante</button>
    {{ form_end(registrationForm)

{% endblock %}
